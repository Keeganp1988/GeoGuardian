{
  "name": "geoguardian-mobile",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "deps:check": "node scripts/dependency-manager.js check",
    "deps:security": "node scripts/dependency-manager.js security",
    "deps:cleanup": "node scripts/dependency-manager.js cleanup",
    "deps:update-expo": "node scripts/dependency-manager.js update-expo",
    "deps:report": "node scripts/dependency-manager.js report",
    "deps:validate": "node scripts/dependency-manager.js validate",
    "deps:maintenance": "node scripts/dependency-manager.js maintenance",
    "upgrade:sdk53": "npm run deps:cleanup && npm run deps:update-expo 53 && npm run deps:validate",
    "upgrade:sdk53:auto": "node scripts/upgrade-sdk53.js",
    "deps:restore": "node scripts/upgrade-sdk53.js --restore",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:validate": "node scripts/build-manager/index.js validate",
    "build:clean": "node scripts/build-manager/index.js clean",
    "build:android-dev": "node scripts/build-manager/index.js build android development",
    "build:fix-signatures": "node scripts/build-manager/index.js fix-signatures",
    "build:report": "node scripts/build-manager/index.js report",
    "build:onboard": "node scripts/build-manager/onboarding-script.js",
    "build:test": "node scripts/build-manager/integration-test.js",
    "postinstall": "node -e \"const fs = require('fs'); const path = require('path'); const patchesDir = path.join(__dirname, 'patches'); if (fs.existsSync(patchesDir) && fs.readdirSync(patchesDir).length > 0) { require('child_process').execSync('patch-package', {stdio: 'inherit'}); }\""
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/checkbox": "^0.5.20",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^6.5.17",
    "@react-navigation/native": "^6.1.14",
    "@react-navigation/native-stack": "^6.9.22",
    "@react-navigation/stack": "^6.3.23",
    "@types/crypto-js": "^4.2.2",
    "axios": "^1.10.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "expo": "53.0.20",
    "expo-battery": "~9.1.4",
    "expo-build-properties": "~0.14.8",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-device": "~7.1.4",
    "expo-font": "~13.3.2",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.7",
    "expo-location": "~18.1.6",
    "expo-notifications": "^0.31.4",
    "expo-sensors": "~14.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-sqlite": "~15.2.14",
    "expo-status-bar": "~2.2.3",
    "expo-task-manager": "~13.1.6",
    "firebase": "^11.10.0",
    "nativewind": "^4.1.23",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-keychain": "^10.0.0",
    "react-native-maps": "1.20.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-svg-transformer": "^1.5.1",
    "react-native-switch-toggle": "^2.2.1",
    "react-native-web": "^0.20.0",
    "tailwindcss": "^3.3.2",
    "@expo/metro-runtime": "~5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "patch-package": "^8.0.0",
    "react-dom": "19.0.0",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@react-native-community/checkbox"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "private": true
}
